{
  "version": 2,
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/root/$1",
      "headers": {
        "Cache-Control": "s-maxage=3600, stale-while-revalidate"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/uploads/$1",
      "headers": {
        "Cache-Control": "s-maxage=86400, immutable"
      }
    }
  ]
}